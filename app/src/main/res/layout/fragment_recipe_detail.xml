<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".RecipeDetailFragment"
    android:fillViewport="true"
    android:orientation="vertical">

        <ListView
            android:id="@+id/ingredients_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/INGREDIENTS_LIST_MARGIN"
            android:layout_weight="2" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recipe_step_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/RECIPE_STEPS_LIST_MARGIN"
            android:layout_weight="3" />




</LinearLayout>
